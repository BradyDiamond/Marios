<div class="row">
  <div id="title-text">
    <div class="col-6">
      <h1><%= @product.name %> <img id= "coffee" src="https://www.clearbags.com/media/catalog/product/cache/d43c9ecf208a5da92b3916d7b6b66fea/z/i/zipper-pouches-with-valves-zbgm2k-1.jpg"></h1>
      <h3>$ <%= @product.cost %>.00</h3>
      <h3><%= @product.country_of_origin %></h3>
      <% if current_user && current_user.admin? == true %>
      <p><%= link_to "Edit", edit_product_path(@product) %> -- <%= link_to "Delete", product_path(@product),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>
      <%end%>
      <div>  
        <% if current_user %>
        <p><%= link_to "Add a review", new_product_review_path(@product) %></p>
        <%end%>
      </div>
      <p><%= link_to "Return to products", products_path %></p>
    </div>
  </div>

  <div class="col-4">
      
        <img id= "wario" src="https://play.nintendo.com/images/Masthead_Wario.17345b1513ac044897cfc243542899dce541e8dc.9afde10b.png">
      
  </div>

<div class="col-4">
  <% if @product.reviews.any? %>
    <div id="title-text">
      <h2>Reviews</h2>
    </div>
    <% @product.reviews.each do |review| %>
    <h4><%= link_to review.author, product_review_path(@product, review) %></4>
  <% end %>
  <% else %>
    <p>No reviews are listed for this product.</p>
  <% end %>
</div>
  






